<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/comp_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    tools:context=".ui.activities.weighing.WeighingActivity">

    <TextView
        android:id="@+id/displayPercent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#969191"
        android:padding="2dp"
        android:paddingStart="4dp"
        android:paddingEnd="2dp"
        android:textColor="#f3f3f3"
        android:textSize="19sp"
        android:textStyle="bold"
        android:singleLine="true"
        android:gravity="start|center_vertical"
        android:minHeight="20dp"
        app:layout_constraintTop_toTopOf="@+id/bar"
        app:layout_constraintStart_toEndOf="@id/bar"
        tools:text="xx 40%" />

    <TextView
        android:id="@+id/displayInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#969191"
        android:padding="2dp"
        android:paddingStart="4dp"
        android:paddingEnd="2dp"
        android:textColor="#f3f3f3"
        android:textSize="19sp"
        android:textStyle="bold"
        android:gravity="start|center_vertical"
        android:minHeight="20dp"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@id/displayPercent"
        app:layout_constraintStart_toEndOf="@id/bar"
        tools:text="Max weight reached!" />

    <View
        android:id="@+id/bar"
        android:layout_width="2dp"
        android:layout_height="6dp"
        android:background="#EE7559"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>