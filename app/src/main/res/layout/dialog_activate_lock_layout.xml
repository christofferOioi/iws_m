<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="16dp">

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/firstGuide"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@color/dark_blue"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.3"/>

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/fotter"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@color/dark_blue"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.8"/>


    <TextView android:id="@+id/txtHeader"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="16sp"
              android:text="Device lock"
              android:textStyle="normal"
              android:textColor="@color/orange"
              android:layout_marginStart="16dp"
              android:layout_marginTop="8dp"
              android:layout_marginBottom="8dp"
              app:layout_constraintBottom_toTopOf="@+id/firstGuide"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintStart_toStartOf="parent"/>

    <View
            android:id="@+id/line_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_light_bg"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toBottomOf="@id/txtHeader"/>


    <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:text="enter your code"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@+id/line_divider"
            app:layout_constraintStart_toStartOf="parent"/>

    <EditText android:id="@+id/inputTextForLock"
              android:layout_height="wrap_content"
              android:layout_width="0dp"
              android:gravity="center"
              android:layout_marginEnd="10dp"
              android:layout_marginStart="10dp"
              android:layout_marginTop="8dp"
              android:singleLine="true"
              android:inputType="number"
              android:maxLines="1"
              android:lines="1"

              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintTop_toTopOf="@+id/firstGuide"/>

    <Button
            android:id="@+id/btnDialogOk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/orange"
            android:text="OK"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/fotter" android:layout_marginTop="16dp"/>

    <Button
            android:id="@+id/btnDialogCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="CANCEL"
            android:textColor="@color/orange"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnDialogOk"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="@+id/fotter"/>

</androidx.constraintlayout.widget.ConstraintLayout>