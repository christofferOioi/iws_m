<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/automaticRootView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="se.oioi.blestandardapp.ui.activities.weighing.WeighingActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="0dp"
    android:padding="8dp">

    <ImageButton
        android:id="@+id/btnUndo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/standard_button_selector"
        android:onClick="buttonClick"
        android:src="@drawable/ic_undo_black_24dp"
        android:text="@string/txt_undo"
        android:textColor="@color/black"
        android:textSize="@dimen/btn_txt_size"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btnAction"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/standard_button_selector"
        android:onClick="buttonClick"
        android:src="@drawable/ic_pause_black_24dp"
        android:text="@string/txt_pause"
        android:textColor="@color/black"
        android:textSize="@dimen/btn_txt_size"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/standard_button_selector"
        android:onClick="buttonClick"
        android:src="@drawable/ic_close_black_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnUndo" />

    <ImageButton
        android:id="@+id/btnTare"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/standard_button_selector"
        android:onClick="buttonClick"
        android:src="@drawable/ic_tare_black_24dp"
        android:text="@string/txt_tare"
        android:textColor="@color/black"
        android:textSize="@dimen/btn_txt_size"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnSubtract"
        app:layout_constraintStart_toEndOf="@+id/btnBack"
        app:layout_constraintTop_toBottomOf="@+id/btnUndo" />


    <ImageButton
        android:id="@+id/btnSubtract"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/standard_button_selector"
        android:onClick="buttonClick"
        android:src="@drawable/ic_remove_black_24dp"
        android:text="@string/txt_subtract_weighing"
        android:textColor="@color/black"
        android:textSize="@dimen/btn_txt_size"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>